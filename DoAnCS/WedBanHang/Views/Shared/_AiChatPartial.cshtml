@using Microsoft.AspNetCore.Identity
@inject UserManager<WebBanHang.Models.ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var currentUser = await UserManager.GetUserAsync(HttpContextAccessor.HttpContext.User);
    var aiUserAvatar = currentUser?.AvatarUrl ?? "/images/default-avatar.png";
}

<div id="aiChatWidget" style="position: fixed; bottom: 90px; right: 24px; z-index: 9999;">
    <button onclick="toggleAiChat()" class="btn btn-success shadow rounded-circle px-2 py-2">
        🤖
    </button>

    <div id="aiChatBox" style="display: none; width: 450px;" class="card shadow-lg mt-2 rounded-4 border-0">
        <div class="card-header bg-success text-white py-2 px-3 d-flex justify-content-between align-items-center rounded-top-4">
            <strong>🤖 Chat AI cửa hàng</strong>
            <button class="btn-close btn-close-white btn-sm" onclick="toggleAiChat()"></button>
        </div>
        <div class="card-body p-3" id="aiChatMessages" style="height: 500px; overflow-y: auto; background: #f4f6f9;"></div>
        <div class="card-footer bg-white p-3 border-top">
            <input type="text" id="aiChatInput" class="form-control form-control-sm rounded-pill px-3"
                   placeholder="Nhập tin nhắn..." onkeypress="handleAiKeyPress(event)" />
        </div>
    </div>
</div>

<script>
    const aiUserAvatar = "@aiUserAvatar";

    function toggleAiChat() {
        const box = document.getElementById("aiChatBox");
        box.style.display = box.style.display === "block" ? "none" : "block";
    }

    async function handleAiKeyPress(e) {
        if (e.key === "Enter") {
            const input = document.getElementById("aiChatInput");
            const message = input.value.trim();
            if (!message) return;

            appendAiMessage("Bạn", message, aiUserAvatar, true);
            input.value = "";

            try {
                const res = await fetch("/api/ai/chat", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ message })
                });

                const reply = await res.text();
                appendAiMessage("AI", reply, "/images/logo.png", false);
            } catch (err) {
                appendAiMessage("AI", "⚠️ Lỗi khi gọi AI: " + err.message, "/images/logo.png", false);
            }
        }
    }

    function appendAiMessage(sender, content, avatar, isUser) {
        const chatBox = document.getElementById("aiChatMessages");
        const cls = isUser ? "user" : "admin";
        chatBox.innerHTML += `
            <div class="chat-message ${cls}">
                <div class="chat-name">${sender}</div>
                <div class="message-row">
                    <img class="avatar" src="${avatar}" alt="Avatar">
                    <div class="bubble">${content}</div>
                </div>
            </div>`;
        chatBox.scrollTop = chatBox.scrollHeight;
    }
</script>

<style>
    .chat-message {
        margin-bottom: 16px;
        max-width: 80%;
    }

    .chat-name {
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 6px;
        color: #555;
        padding-left: 48px;
    }

    .message-row {
        display: flex;
        align-items: flex-start;
        gap: 8px;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 1px solid #ccc;
        flex-shrink: 0;
    }

    .bubble {
        background-color: #e4e6eb;
        padding: 10px 14px;
        border-radius: 16px;
        max-width: 100%;
        word-break: break-word;
        white-space: pre-wrap;
        line-height: 1.5;
    }

    .chat-message.user {
        margin-left: auto;
    }

        .chat-message.user .chat-name {
            padding-left: 0;
            padding-right: 48px;
            text-align: right;
        }

        .chat-message.user .message-row {
            flex-direction: row-reverse;
            text-align: right;
        }

        .chat-message.user .bubble {
            background-color: #28a745;
            color: white;
        }

    .chat-message.admin .message-row {
        flex-direction: row;
    }

    #aiChatWidget .btn {
        font-size: 1.25rem;
        height: 48px;
        width: 48px;
        line-height: 1;
    }

    #aiChatBox {
        font-family: "Segoe UI", sans-serif;
        border: none;
        box-shadow: 0 8px 30px rgba(0,0,0,0.2);
    }

    #aiChatMessages {
        scroll-behavior: smooth;
        font-size: 0.95rem;
        background: #f4f6f9;
        height: 500px;
        overflow-y: auto;
    }
</style>
